
public class KthSmallest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    int arr[] = {2,1,3,8,6,7,5};
    System.out.println(arr);
    swap(arr,0,1);
    System.out.println(arr);
	}
	
	public static void swap(int []arr,int a, int b) {
		int temp;
		temp = arr[a];
		arr[a]=arr[b];
		arr[b]=temp;
	}
	

}
